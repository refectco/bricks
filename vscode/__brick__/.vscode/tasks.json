{
  "version": "2.0.0",
  "tasks": [
      // build runner's <build|watch> task
      {
          "label": "build_runner",
          "type": "flutter",
          "command": "flutter",
          "options": {
              "cwd": "${workspaceFolder}/app"
          },
          "args": [
              "pub",
              "run",
              "build_runner",
              "${input:build_runner_param}", // the same stuff but watching this time
              "lib/",
              "--delete-conflicting-outputs",
          ],
          "presentation": {
              "echo": true,
              "reveal": "silent", // show output for watch tasks
              "focus": false,
              "panel": "shared",
              "showReuseMessage": false,
              "clear": false,
          },
          "problemMatcher": [
              "$dart-build_runner"
          ],
          "group": "build",
          "detail": ""
      },
      // import sorter's task
      {
          "label": "import_sorter",
          "type": "flutter",
          "command": "flutter",
          "args": [
              "pub",
              "run",
              "import_sorter:main",
              "-e",
          ],
          "presentation": {
              "echo": true,
              "reveal": "silent", // show output for watch tasks
              "focus": false,
              "panel": "shared",
              "showReuseMessage": true,
              "clear": false
          },
          "options": {
              "cwd": "${workspaceFolder}/app"
          },
          "problemMatcher": [
              "$dart-build_runner"
          ],
          "group": "build",
          "detail": ""
      },
      {
          "label": "Launch Firebase Emulator Suite",
          "type": "shell",
          "command": "bash",
          "options": {
              "cwd": "${workspaceFolder}/firebase"
          },
          "args": [
              "run.sh",
          ],
          "problemMatcher": []
      }
  ],
  "inputs": [
      {
          "id": "build_runner_param",
          "type": "promptString",
          "default": "build",
          "description": "pub run build_runner <build|watch>",
      }
  ]
}